:sass
  body
    background: #efefef

  .feed
    background: #fff
    flex-grow: 1
    margin: 1.5em auto
    max-width: 320px
    padding: 1.5em
    position: relative
    width: 100%

  img
    height: 100%
    width: 100%

  .name
    border-radius: 25px
    background: #fff
    padding: 1.5em
    position: relative
    max-width: 600px
    margin: 1em auto
    font-size: 1.5em

  .brain
    align-items: center
    display: flex
    justify-content: center
    padding: 30px 0

    > img
      max-width: 100px
      border-radius: 50%
      padding: 8px
      animation: pulse 2s infinite

  @keyframes pulse
    0%
      -webkit-box-shadow: 0 0 0 0 rgba(204,169,44, 0.4)
    70%
      -webkit-box-shadow: 0 0 0 20px rgba(204,169,44, 0)
    100%
      -webkit-box-shadow: 0 0 0 0 rgba(204,169,44, 0)

%div.brain
  =image_tag "favicon.png"

= react_component 'Feed', { :ideas => @user.ideas.reverse }