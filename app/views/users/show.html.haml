:sass
  body
    background: #efefef

  .feed
    background: #fff
    flex-grow: 1
    margin: 0 auto
    max-width: 600px
    padding: 1.5em
    position: relative
    width: 100%

  img
    height: 100%
    width: 100%

%h1= @user.username

%div.feed
  - @user.ideas.each do |idea|
    = react_component 'Idea', { :name => idea.name, :date => idea.created_at.strftime('%F'), :imageUrl => idea.image_url }